<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_battle_net_dashbored"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jack.steamblizz.BattleNetDashboard">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="112dp">

            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                app:srcCompat="@drawable/diablo"
                android:id="@+id/diablo"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@android:color/background_light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="104dp"
                android:inputType="textPersonName"
                android:text="Diabloe 3 from blizzard, is a role playing game"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                app:srcCompat="@drawable/sc2"
                android:id="@+id/starcraft"
                android:layout_weight="0.05"
                android:scaleType="fitCenter"
                android:background="@android:color/background_light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Starcraft is an RTS"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_weight="0.05" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="226dp">

            <ImageButton
                android:layout_width="200px"
                android:layout_height="200px"
                app:srcCompat="@drawable/wow"
                android:id="@+id/wow"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@android:color/background_light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="World of warcraft is a mmo rpg"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
