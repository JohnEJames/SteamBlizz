<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jack.steamblizz.Settings">

    <TextView
        android:text="Add Steam ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/AddSteamID"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Refresh App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AppReset"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="48dp"
        android:layout_alignBottom="@+id/DatabaseReset"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Reset DataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DatabaseReset"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/AppReset" />

    <TextView
        android:text="Remove Steam ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InsertSteamID"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:layout_alignEnd="@+id/DatabaseReset" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/removeID"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Remove ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/removeID"
        android:layout_alignEnd="@+id/InsertSteamID"
        android:layout_marginTop="17dp"
        android:id="@+id/idRemoval" />

    <Button
        android:text="Apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/idRemoval"
        android:layout_marginBottom="12dp"
        android:id="@+id/ApplySettings" />

    <Button
        android:text="Add ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InsertSteamID"
        android:layout_below="@+id/AddSteamID"
        android:layout_alignStart="@+id/AppReset" />
</RelativeLayout>
